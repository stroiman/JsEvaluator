%{
open Ast
%}
%start start
%token MINUS PLUS
%token EOF
%token < double > NUMBER
%type < Program > start
%%

start:
    | statement EOF     { Program [ $1 ] }

statement:
    | expression    { ExpressionStmt $1 }

expression:
    | NUMBER        { NumberLiteral $1 }
    | expression
      PLUS
      expression    { Plus($1, $3) }
    | expression
      MINUS
      expression    { Minus($1, $3) }
