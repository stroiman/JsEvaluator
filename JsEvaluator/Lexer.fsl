{
module Lexer
open Microsoft.FSharp.Text.Lexing
open Parser

let getString = LexBuffer<_>.LexemeString
let getDouble = getString >> System.Double.Parse
}

let digit = ['0' - '9']
let number = digit+
let whitespace = [' ' '\t' '\r' '\n']

rule token = parse
    | whitespace*   { token lexbuf }
    | '+'           { PLUS }
    | '-'           { MINUS }
    | number        { lexbuf |> getDouble |> NUMBER }
    | eof           { EOF }